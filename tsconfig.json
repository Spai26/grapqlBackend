{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDirs": ["./src"],
    "baseUrl": ".",
    "paths": {
      "@routes/*": ["./src/routes/*"],
      "@config/*": ["./src/config/*"],
      "@models/*": ["./src/database/models/*"],
      "@graphql/*": ["./src/graphql/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "allowJs": true,
    "declaration": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
